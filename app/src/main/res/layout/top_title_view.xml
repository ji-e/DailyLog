<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_title_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp45"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/dp16"
    android:paddingRight="@dimen/dp16">

    <ImageButton
        android:id="@+id/top_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_close_selector" />

    <ImageView
        android:id="@+id/top_iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dlog_logo_01" />

    <TextView
        android:id="@+id/top_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp35"
        android:layout_toEndOf="@+id/top_iv_logo"
        android:gravity="center"
        android:text="@string/daily_title"
        android:textSize="@dimen/dp16" />

    <!--오른쪽 버튼-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/top_btn_pencil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pencil_selector" />

        <RelativeLayout
            android:id="@+id/top_layout_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/top_btn_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_calendar_selector" />

            <TextView
                android:id="@+id/top_tv_calendar"
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp35"
                android:gravity="center"
                android:paddingTop="@dimen/dp02"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp10" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/top_btn_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_open_selector" />

        <ImageButton
            android:id="@+id/top_btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_search_selector" />

        <ImageButton
            android:id="@+id/top_btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_menu_selector" />

    </LinearLayout>

</RelativeLayout>
